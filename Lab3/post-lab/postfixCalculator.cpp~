#include <iostream>
#include "stack.h" //using my own stack class
#include "stack.cpp"
#include "postfixCalculator.h"
#include <cstdlib>
#include <string>

using namespace std;

//Constructor
postfixCalculator::postfixCalculator(){
  stack s;
}

void postfixCalculator::addition(){
  int x;
  int y;
  empty();
  x = s.top();
  s.pop();
  empty();
  y = s.top();
  s.pop();
  int z = x+y;
  s.push(z); //push result back onto the stack
}

void postfixCalculator::subtraction(){
  int x;
  int y;
  empty();
  x = s.top();
  s.pop();
  empty();
  y = s.top();
  s.pop();
  int z = y - x;
  s.push(z); //push result back onto stack
}

void postfixCalculator::multiplication(){
  int x;
  int y;
  empty();
  x = s.top();
  s.pop();
  empty();
  y = s.top();
  s.pop();
  int z = y*x;
  s.push(z); //push result back onto stack
  
}
void postfixCalculator::division(){
  int x;
  int y;
  empty();
  x = s.top();
  s.pop();
  empty();
  y = s.top();
  s.pop();
  int z = y/x;
  s.push(z); //push result back onto stack
}

void postfixCalculator::empty(){
  if (s.empty()){
    exit(-1);
  } else {
}
}
